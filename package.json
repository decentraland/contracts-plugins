{
  "name": "decentraland-contract-plugins",
  "version": "0.0.0-semantic-release",
  "description": "Decentraland Contracts Plugins",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig-build.json",
    "test": "scripts/test.sh",
    "test:coverage": "nyc scripts/test.sh",
    "test:watch": "nodemon test/** contracts/** --exec 'npm test'",
    "lint": "npx eslint test && npx solium -d contracts",
    "lint:fix": "npx eslint --fix test && npx solium -d contracts --fix",
    "semantic-release": "semantic-release",
    "commit-msg": "validate-commit-msg"
  },
  "nyc": {
    "all": true,
    "include": [
      "src"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/decentraland/contracts-plugins.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/decentraland/contracts-plugins/issues"
  },
  "homepage": "https://github.com/decentraland/contracts-plugins#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ganache": "^2.0.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/web3": "^1.0.18",
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "bn-chai": "^1.0.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.4.0",
    "ethereumjs-abi": "^0.6.5",
    "ganache-cli": "^6.2.4",
    "hardhat": "^2.0.8",
    "husky": "^1.3.1",
    "mocha": "^3.5.3",
    "nyc": "^13.3.0",
    "prettier": "^1.11.1",
    "semantic-release": "^15.13.3",
    "web3": "^1.2.4",
    "websocket": "^1.0.28"
  },
  "dependencies": {
    "bid-contract": "^1.0.1",
    "decentraland-mana": "^1.0.0",
    "marketplace-contracts": "^1.2.0",
    "openzeppelin-solidity": "^2.2.0",
    "truffle-contract": "^4.0.11",
    "ts-node": "^8.0.3",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "semi": false
  }
}
